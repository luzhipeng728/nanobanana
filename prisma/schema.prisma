// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          String       @id @default(uuid())
  username    String       @unique
  password    String       // 密码哈希
  createdAt   DateTime     @default(now())
  canvases    Canvas[]
  imageTasks  ImageTask[]
  musicTasks  MusicTask[]
  videoTasks  VideoTask[]
  stickerTasks StickerTask[]
  veoTasks    VeoTask[]
  spriteTasks SpriteTask[]
  ttsTasks    TTSTask[]
  pptTasks    PPTTask[]
}

model Canvas {
  id        String   @id @default(uuid())
  name      String
  data      String   @db.LongText // Storing JSON string of nodes and edges
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
}

model ImageTask {
  id               String    @id @default(uuid())
  status           String    // pending, processing, completed, failed
  prompt           String    @db.Text
  model            String
  config           String?   @db.Text // JSON string of ImageGenerationConfig
  referenceImages  String?   @db.Text // JSON array of reference image URLs
  imageUrl         String?   @db.Text // Result image URL (when completed)
  error            String?   @db.Text // Error message (when failed)
  userId           String?   // 关联用户（用于统计）
  user             User?     @relation(fields: [userId], references: [id])
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  completedAt      DateTime?
  deletedAt        DateTime? // 软删除：null 表示未删除，有值表示删除时间

  @@index([userId])
  @@index([status])
  @@index([deletedAt])
}

model MusicTask {
  id             String    @id @default(uuid())
  status         String    // pending, processing, completed, failed
  prompt         String    @db.Text
  lyrics         String?   @db.Text
  numberOfSongs  Int       @default(2)
  externalTaskId String?   // Mureka task ID for polling
  musicUrls      String?   @db.LongText // JSON array of generated music URLs [{url, flacUrl, duration}]
  error          String?   @db.Text
  userId         String?   // 关联用户（用于统计）
  user           User?     @relation(fields: [userId], references: [id])
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  completedAt    DateTime?
  deletedAt      DateTime? // 软删除

  @@index([userId])
  @@index([status])
  @@index([deletedAt])
}

model VideoTask {
  id          String    @id @default(uuid())
  status      String    // pending, processing, completed, failed
  prompt      String    @db.Text
  orientation String    @default("portrait") // portrait or landscape
  inputImage  String?   @db.Text // Optional image URL for image-to-video
  videoUrl    String?   @db.Text
  progress    Int       @default(0) // 0-100
  error       String?   @db.Text
  userId      String?   // 关联用户（用于统计）
  user        User?     @relation(fields: [userId], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  completedAt DateTime?
  deletedAt   DateTime? // 软删除

  @@index([userId])
  @@index([status])
  @@index([deletedAt])
}

model StickerTask {
  id              String    @id @default(uuid())
  status          String    // pending, processing, completed, failed
  animationType   String    @db.Text // 动画描述
  referenceImage  String    @db.Text // 参考图片 URL
  model           String    // 使用的模型
  config          String?   @db.Text // JSON 配置
  customPrompt    String?   @db.LongText // 自定义提示词 / 帧提示词 JSON
  totalFrames     Int       @default(10)
  completedFrames Int       @default(0)
  frames          String?   @db.LongText // JSON 数组，存储已生成的帧图片 URLs
  frameStatuses   String?   @db.Text // JSON 数组，每帧的状态
  error           String?   @db.Text
  userId          String?   // 关联用户（用于统计）
  user            User?     @relation(fields: [userId], references: [id])
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  completedAt     DateTime?
  deletedAt       DateTime? // 软删除

  @@index([userId])
  @@index([status])
  @@index([deletedAt])
}

// Veo 视频生成任务
model VeoTask {
  id              String    @id @default(uuid())
  status          String    // pending, processing, completed, failed
  prompt          String    @db.Text
  aspectRatio     String    @default("16:9")   // 16:9 或 9:16
  resolution      String    @default("720p")   // 720p
  durationSeconds Int       @default(8)        // 5-8 秒
  negativePrompt  String?   @db.Text           // 负面提示词
  inputImage      String?   @db.Text           // 可选的输入图片 (图生视频)
  operationName   String?   @db.Text           // Google API 的 operation name，用于轮询
  videoUrl        String?   @db.Text           // 生成的视频 URL
  error           String?   @db.Text
  userId          String?                      // 关联用户（用于统计）
  user            User?     @relation(fields: [userId], references: [id])
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  completedAt     DateTime?
  deletedAt       DateTime? // 软删除

  @@index([userId])
  @@index([status])
  @@index([deletedAt])
}

// API Key 状态管理（全局单例）
model ApiKeyState {
  id              String   @id @default("gemini") // 固定 ID，确保单例
  currentKeyIndex Int      @default(0)            // 当前使用的 Key 索引
  failedKeys      String   @db.Text               // JSON 数组：失败的 Key 索引列表
  failedAt        String   @db.Text               // JSON 对象：{ keyIndex: timestamp }
  updatedAt       DateTime @updatedAt
}

// Sprite 精灵图生成任务
model SpriteTask {
  id              String    @id @default(uuid())
  status          String    // pending, processing, completed, failed
  mode            String    // replica, creative
  templateImage   String?   @db.LongText   // Replica 模式：模板精灵图
  characterImage  String    @db.LongText   // 角色图片
  prompt          String?   @db.Text       // 风格提示词
  actionPrompt    String?   @db.Text       // Creative 模式：动作描述
  size            String    @default("2K") // 分辨率 1K/2K/4K
  aspectRatio     String    @default("1:1")
  spriteSheetUrl  String?   @db.LongText   // 生成的精灵图（R2 URL）
  frameUrls       String?   @db.LongText   // 切割后的帧 URL 列表 JSON
  spriteConfig    String?   @db.Text       // AI 分析后的精灵图配置 JSON（含空白帧信息）
  error           String?   @db.Text
  userId          String?
  user            User?     @relation(fields: [userId], references: [id])
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  completedAt     DateTime?
  deletedAt       DateTime?

  @@index([userId])
  @@index([status])
  @@index([deletedAt])
}

// 幻灯片分享
model Slideshow {
  id          String   @id @default(uuid())  // 同时作为分享链接的 slug
  title       String                         // 幻灯片标题
  images      String   @db.LongText          // JSON 数组：按顺序存储图片 URL
  prompts     String?  @db.LongText          // JSON 数组：每张图片的提示词
  cover       String?                        // 封面图 URL（自动生成或使用第一张图）
  userId      String?                        // 创建者（可选，便于统计）
  createdAt   DateTime @default(now())
  // 讲解视频相关
  videoUrl    String?  @db.Text              // 讲解视频 URL
  narrations  String?  @db.LongText          // JSON 数组：每张图片的讲解文案
  speaker     String?                        // 使用的发音人
  transition  String?                        // 转场效果
  videoStatus String?                        // 视频生成状态: generating, completed, failed
  
  // 统计数据
  views       Int      @default(0)           // 浏览次数
  likes       Int      @default(0)           // 点赞次数
  
  slideshowLikes SlideshowLike[]             // 点赞记录

  @@index([userId])
  @@index([views])  // 方便热门排序
  @@index([likes])  // 方便精选排序
}

// 点赞记录（防止重复点赞）
model SlideshowLike {
  id            String    @id @default(uuid())
  slideshowId   String
  slideshow     Slideshow @relation(fields: [slideshowId], references: [id])
  userIdentifier String   // 用户标识（浏览器生成的 UUID）
  createdAt     DateTime  @default(now())

  @@unique([slideshowId, userIdentifier]) // 确保用户对同一幻灯片只能点赞一次
  @@index([userIdentifier])
}

// SuperAgent 多轮对话
model SuperAgentConversation {
  id                String   @id @default(uuid())
  title             String?                        // 对话标题（自动生成或用户设置）
  messages          String   @db.LongText          // JSON 数组：对话消息历史
  compressedHistory String?  @db.LongText          // 压缩后的历史摘要
  totalTokens       Int      @default(0)           // 当前总 token 数
  userId            String?                        // 关联用户
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([userId])
  @@index([updatedAt])
}

// 页面访问统计
model PageView {
  id        String   @id @default(uuid())
  page      String   @unique                // 页面路径，如 "/gallery", "/", "/slides/xxx"
  count     Int      @default(0)            // 累计访问次数
  createdAt DateTime @default(now())        // 首次访问时间
  updatedAt DateTime @updatedAt             // 最后访问时间

  @@index([page])
}

// TTS 语音合成任务
model TTSTask {
  id          String    @id @default(uuid())
  status      String    // pending, processing, completed, failed
  text        String    @db.Text             // 要转换的文本
  speaker     String    @default("zh_female_vivi") // 发音人 ID
  speed       Float     @default(1.0)        // 语速 0.5-2.0
  audioUrl    String?   @db.Text             // 生成的音频 URL
  error       String?   @db.Text             // 错误信息
  userId      String?
  user        User?     @relation(fields: [userId], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  completedAt DateTime?
  deletedAt   DateTime?

  @@index([userId])
  @@index([status])
  @@index([deletedAt])
}

// 一镜到底沉浸式网页
model Scrollytelling {
  id        String   @id @default(uuid())   // 同时作为分享链接的 slug
  title     String                          // 网页标题
  htmlUrl   String   @db.Text               // HTML 文件在 R2 的 URL
  images    String   @db.LongText           // JSON 数组：使用的图片 URL
  theme     String?                         // 主题风格描述
  cover     String?                         // 封面图 URL（第一张图片）
  userId    String?                         // 创建者（可选）
  createdAt DateTime @default(now())

  // 统计数据
  views     Int      @default(0)            // 浏览次数
  likes     Int      @default(0)            // 点赞次数

  scrollytellingLikes ScrollytellingLike[]  // 点赞记录

  @@index([userId])
  @@index([views])
  @@index([likes])
  @@index([createdAt])
}

// Scrollytelling 点赞记录
model ScrollytellingLike {
  id               String         @id @default(uuid())
  scrollytellingId String
  scrollytelling   Scrollytelling @relation(fields: [scrollytellingId], references: [id])
  userIdentifier   String         // 用户标识（浏览器生成的 UUID）
  createdAt        DateTime       @default(now())

  @@unique([scrollytellingId, userIdentifier])
  @@index([userIdentifier])
}

// PPT 演示文稿生成任务
model PPTTask {
  id           String    @id @default(uuid())
  status       String    // pending, processing, completed, failed
  topic        String    @db.Text              // PPT 主题
  description  String?   @db.Text              // 补充说明
  template     String    @default("business")  // business, tech, minimal, creative
  primaryColor String    @default("#3B82F6")   // 主色调
  materials    String?   @db.LongText          // JSON: 输入素材 [{type, url, content}]
  slides       String?   @db.LongText          // JSON: 生成的幻灯片数据
  fileId       String?   @db.Text              // Claude Files API 返回的文件 ID
  pptUrl       String?   @db.Text              // 上传到 R2 后的 PPT URL
  error        String?   @db.Text
  userId       String?
  user         User?     @relation(fields: [userId], references: [id])
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  completedAt  DateTime?
  deletedAt    DateTime?

  @@index([userId])
  @@index([status])
  @@index([deletedAt])
}
