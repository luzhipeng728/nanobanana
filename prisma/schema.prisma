// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          String       @id @default(uuid())
  username    String       @unique
  password    String       // 密码哈希
  isAdmin     Boolean      @default(false) // 管理员标识（可审核权限申请、管理用户）
  balance     Decimal      @default(0.00) @db.Decimal(10, 2) // 用户额度（RMB），永久有效
  freeBalance Decimal      @default(20.00) @db.Decimal(10, 2) // 免费额度（RMB），每日刷新
  freeBalanceUpdatedAt DateTime @default(now()) // 免费额度刷新时间
  remark      String?      @db.Text // 管理员备注
  createdAt   DateTime     @default(now())
  canvases    Canvas[]
  imageTasks  ImageTask[]
  musicTasks  MusicTask[]
  videoTasks  VideoTask[]
  stickerTasks StickerTask[]
  veoTasks    VeoTask[]
  spriteTasks SpriteTask[]
  ttsTasks    TTSTask[]
  pptTasks    PPTTask[]
  researchVideoProjects ResearchVideoProject[]
  modelPermissions UserModelPermission[]
  consumptionRecords ConsumptionRecord[]
  permissionRequests PermissionRequest[]
  quotaRequests QuotaRequest[]
  inviteCodesCreated InviteCode[] @relation("InviteCodeCreator")
}

// 用户-模型权限（细粒度控制）
model UserModelPermission {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  modelId   String   // 模型 ID，如 'nano-banana-pro'
  createdAt DateTime @default(now())

  @@unique([userId, modelId])
  @@index([userId])
  @@index([modelId])
}

// 消费记录
model ConsumptionRecord {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type        String   // image, music, video, sticker, veo, sprite, tts, ppt
  modelId     String   // 使用的模型 ID
  taskId      String?  // 关联的任务 ID（可选）
  amount      Decimal  @db.Decimal(10, 4) // 消费金额（RMB）
  balanceBefore Decimal @db.Decimal(10, 2) // 消费前余额
  balanceAfter  Decimal @db.Decimal(10, 2) // 消费后余额
  description String?  @db.Text // 描述信息
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([type])
  @@index([createdAt])
}

// 模型权限申请
model PermissionRequest {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  modelId     String   // 申请的模型 ID
  reason      String?  @db.Text // 申请理由
  status      String   @default("pending") // pending, approved, rejected
  reviewedBy  String?  // 审核人用户名
  reviewNote  String?  @db.Text // 审核备注
  createdAt   DateTime @default(now())
  reviewedAt  DateTime?

  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

// 邀请码
model InviteCode {
  id          String   @id @default(uuid())
  code        String   @unique
  note        String?  @db.Text // 管理员备注
  createdById String
  createdBy   User     @relation("InviteCodeCreator", fields: [createdById], references: [id], onDelete: Cascade)
  usedById    String?  @unique
  usedBy      User?    @relation(fields: [usedById], references: [id], onDelete: SetNull)
  usedAt      DateTime?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())

  @@index([createdById])
  @@index([usedById])
  @@index([createdAt])
}

// 额度申请
model QuotaRequest {
  id         String   @id @default(uuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  amount     Decimal  @db.Decimal(10, 2) // 申请额度（RMB）
  reason     String?  @db.Text
  status     String   @default("pending") // pending, approved, rejected
  reviewedBy String?  // 审核人用户名
  reviewNote String?  @db.Text
  createdAt  DateTime @default(now())
  reviewedAt DateTime?

  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

model Canvas {
  id        String   @id @default(uuid())
  name      String
  data      String   @db.LongText // Storing JSON string of nodes and edges
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
}

model ImageTask {
  id               String    @id @default(uuid())
  status           String    // pending, processing, completed, failed
  prompt           String    @db.Text
  model            String
  config           String?   @db.Text // JSON string of ImageGenerationConfig
  referenceImages  String?   @db.Text // JSON array of reference image URLs
  imageUrl         String?   @db.Text // Result image URL (when completed)
  error            String?   @db.Text // Error message (when failed)
  userId           String?   // 关联用户（用于统计）
  user             User?     @relation(fields: [userId], references: [id])
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  completedAt      DateTime?
  deletedAt        DateTime? // 软删除：null 表示未删除，有值表示删除时间

  @@index([userId])
  @@index([status])
  @@index([deletedAt])
}

model MusicTask {
  id             String    @id @default(uuid())
  status         String    // pending, processing, completed, failed
  prompt         String    @db.Text
  lyrics         String?   @db.Text
  numberOfSongs  Int       @default(2)
  externalTaskId String?   // Mureka task ID for polling
  musicUrls      String?   @db.LongText // JSON array of generated music URLs [{url, flacUrl, duration}]
  error          String?   @db.Text
  userId         String?   // 关联用户（用于统计）
  user           User?     @relation(fields: [userId], references: [id])
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  completedAt    DateTime?
  deletedAt      DateTime? // 软删除

  @@index([userId])
  @@index([status])
  @@index([deletedAt])
}

model VideoTask {
  id          String    @id @default(uuid())
  status      String    // pending, processing, completed, failed
  prompt      String    @db.Text
  orientation String    @default("portrait") // portrait or landscape
  inputImage  String?   @db.Text // Optional image URL for image-to-video
  videoUrl    String?   @db.Text
  progress    Int       @default(0) // 0-100
  error       String?   @db.Text
  userId      String?   // 关联用户（用于统计）
  user        User?     @relation(fields: [userId], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  completedAt DateTime?
  deletedAt   DateTime? // 软删除

  @@index([userId])
  @@index([status])
  @@index([deletedAt])
}

model StickerTask {
  id              String    @id @default(uuid())
  status          String    // pending, processing, completed, failed
  animationType   String    @db.Text // 动画描述
  referenceImage  String    @db.Text // 参考图片 URL
  model           String    // 使用的模型
  config          String?   @db.Text // JSON 配置
  customPrompt    String?   @db.LongText // 自定义提示词 / 帧提示词 JSON
  totalFrames     Int       @default(10)
  completedFrames Int       @default(0)
  frames          String?   @db.LongText // JSON 数组，存储已生成的帧图片 URLs
  frameStatuses   String?   @db.Text // JSON 数组，每帧的状态
  error           String?   @db.Text
  userId          String?   // 关联用户（用于统计）
  user            User?     @relation(fields: [userId], references: [id])
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  completedAt     DateTime?
  deletedAt       DateTime? // 软删除

  @@index([userId])
  @@index([status])
  @@index([deletedAt])
}

// Veo 视频生成任务
model VeoTask {
  id              String    @id @default(uuid())
  status          String    // pending, processing, completed, failed
  prompt          String    @db.Text
  aspectRatio     String    @default("16:9")   // 16:9 或 9:16
  resolution      String    @default("720p")   // 720p
  durationSeconds Int       @default(8)        // 5-8 秒
  negativePrompt  String?   @db.Text           // 负面提示词
  inputImage      String?   @db.Text           // 可选的输入图片 (图生视频)
  operationName   String?   @db.Text           // Google API 的 operation name，用于轮询
  videoUrl        String?   @db.Text           // 生成的视频 URL
  error           String?   @db.Text
  userId          String?                      // 关联用户（用于统计）
  user            User?     @relation(fields: [userId], references: [id])
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  completedAt     DateTime?
  deletedAt       DateTime? // 软删除

  @@index([userId])
  @@index([status])
  @@index([deletedAt])
}

// API Key 状态管理（全局单例）
model ApiKeyState {
  id              String   @id @default("gemini") // 固定 ID，确保单例
  currentKeyIndex Int      @default(0)            // 当前使用的 Key 索引
  failedKeys      String   @db.Text               // JSON 数组：失败的 Key 索引列表
  failedAt        String   @db.Text               // JSON 对象：{ keyIndex: timestamp }
  updatedAt       DateTime @updatedAt
}

// API Key 存储（用于管理 Gemini、Seedream 等外部服务的 Key）
model ApiKey {
  id        String   @id @default(uuid())
  provider  String   // 提供商标识: gemini, seedream
  key       String   @db.Text // API Key
  name      String?  // 备注名称，如 "Gemini Key 1", "Seedream 主账号"
  isActive  Boolean  @default(true) // 是否启用
  priority  Int      @default(0) // 优先级（同 provider 多个 key 时，数字越大优先级越高）
  usageCount Int     @default(0) // 使用次数统计
  lastUsedAt DateTime? // 最后使用时间
  lastError  String?  @db.Text // 最后一次错误信息
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([provider])
  @@index([isActive])
  @@index([provider, isActive, priority])
}

// Sprite 精灵图生成任务
model SpriteTask {
  id              String    @id @default(uuid())
  status          String    // pending, processing, completed, failed
  mode            String    // replica, creative
  templateImage   String?   @db.LongText   // Replica 模式：模板精灵图
  characterImage  String    @db.LongText   // 角色图片
  prompt          String?   @db.Text       // 风格提示词
  actionPrompt    String?   @db.Text       // Creative 模式：动作描述
  size            String    @default("2K") // 分辨率 1K/2K/4K
  aspectRatio     String    @default("1:1")
  spriteSheetUrl  String?   @db.LongText   // 生成的精灵图（R2 URL）
  frameUrls       String?   @db.LongText   // 切割后的帧 URL 列表 JSON
  spriteConfig    String?   @db.Text       // AI 分析后的精灵图配置 JSON（含空白帧信息）
  error           String?   @db.Text
  userId          String?
  user            User?     @relation(fields: [userId], references: [id])
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  completedAt     DateTime?
  deletedAt       DateTime?

  @@index([userId])
  @@index([status])
  @@index([deletedAt])
}

// 幻灯片分享
model Slideshow {
  id          String   @id @default(uuid())  // 同时作为分享链接的 slug
  title       String                         // 幻灯片标题
  images      String   @db.LongText          // JSON 数组：按顺序存储图片 URL
  prompts     String?  @db.LongText          // JSON 数组：每张图片的提示词
  cover       String?                        // 封面图 URL（自动生成或使用第一张图）
  userId      String?                        // 创建者（可选，便于统计）
  createdAt   DateTime @default(now())
  // 讲解视频相关
  videoUrl    String?  @db.Text              // 讲解视频 URL
  narrations  String?  @db.LongText          // JSON 数组：每张图片的讲解文案
  speaker     String?                        // 使用的发音人
  transition  String?                        // 转场效果
  videoStatus String?                        // 视频生成状态: generating, completed, failed
  
  // 统计数据
  views       Int      @default(0)           // 浏览次数
  likes       Int      @default(0)           // 点赞次数
  
  slideshowLikes SlideshowLike[]             // 点赞记录

  @@index([userId])
  @@index([views])  // 方便热门排序
  @@index([likes])  // 方便精选排序
}

// 点赞记录（防止重复点赞）
model SlideshowLike {
  id            String    @id @default(uuid())
  slideshowId   String
  slideshow     Slideshow @relation(fields: [slideshowId], references: [id])
  userIdentifier String   // 用户标识（浏览器生成的 UUID）
  createdAt     DateTime  @default(now())

  @@unique([slideshowId, userIdentifier]) // 确保用户对同一幻灯片只能点赞一次
  @@index([userIdentifier])
}

// SuperAgent 多轮对话
model SuperAgentConversation {
  id                String   @id @default(uuid())
  title             String?                        // 对话标题（自动生成或用户设置）
  messages          String   @db.LongText          // JSON 数组：对话消息历史
  compressedHistory String?  @db.LongText          // 压缩后的历史摘要
  totalTokens       Int      @default(0)           // 当前总 token 数
  userId            String?                        // 关联用户
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([userId])
  @@index([updatedAt])
}

// 页面访问统计
model PageView {
  id        String   @id @default(uuid())
  page      String   @unique                // 页面路径，如 "/gallery", "/", "/slides/xxx"
  count     Int      @default(0)            // 累计访问次数
  createdAt DateTime @default(now())        // 首次访问时间
  updatedAt DateTime @updatedAt             // 最后访问时间

  @@index([page])
}

// TTS 语音合成任务
model TTSTask {
  id          String    @id @default(uuid())
  status      String    // pending, processing, completed, failed
  text        String    @db.Text             // 要转换的文本
  speaker     String    @default("zh_female_vivi") // 发音人 ID
  speed       Float     @default(1.0)        // 语速 0.5-2.0
  audioUrl    String?   @db.Text             // 生成的音频 URL
  error       String?   @db.Text             // 错误信息
  userId      String?
  user        User?     @relation(fields: [userId], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  completedAt DateTime?
  deletedAt   DateTime?

  @@index([userId])
  @@index([status])
  @@index([deletedAt])
}

// 一镜到底沉浸式网页
model Scrollytelling {
  id        String   @id @default(uuid())   // 同时作为分享链接的 slug
  title     String                          // 网页标题
  htmlUrl   String   @db.Text               // HTML 文件在 R2 的 URL
  images    String   @db.LongText           // JSON 数组：使用的图片 URL
  theme     String?                         // 主题风格描述
  cover     String?                         // 封面图 URL（第一张图片）
  userId    String?                         // 创建者（可选）
  createdAt DateTime @default(now())

  // 统计数据
  views     Int      @default(0)            // 浏览次数
  likes     Int      @default(0)            // 点赞次数

  scrollytellingLikes ScrollytellingLike[]  // 点赞记录

  @@index([userId])
  @@index([views])
  @@index([likes])
  @@index([createdAt])
}

// Scrollytelling 点赞记录
model ScrollytellingLike {
  id               String         @id @default(uuid())
  scrollytellingId String
  scrollytelling   Scrollytelling @relation(fields: [scrollytellingId], references: [id])
  userIdentifier   String         // 用户标识（浏览器生成的 UUID）
  createdAt        DateTime       @default(now())

  @@unique([scrollytellingId, userIdentifier])
  @@index([userIdentifier])
}

// PPT 演示文稿生成任务
model PPTTask {
  id           String    @id @default(uuid())
  status       String    // pending, processing, completed, failed
  topic        String    @db.Text              // PPT 主题
  description  String?   @db.Text              // 补充说明
  template     String    @default("business")  // business, tech, minimal, creative
  primaryColor String    @default("#3B82F6")   // 主色调
  materials    String?   @db.LongText          // JSON: 输入素材 [{type, url, content}]
  slides       String?   @db.LongText          // JSON: 生成的幻灯片数据
  fileId       String?   @db.Text              // Claude Files API 返回的文件 ID
  pptUrl       String?   @db.Text              // 上传到 R2 后的 PPT URL
  error        String?   @db.Text
  userId       String?
  user         User?     @relation(fields: [userId], references: [id])
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  completedAt  DateTime?
  deletedAt    DateTime?

  @@index([userId])
  @@index([status])
  @@index([deletedAt])
}

// 研究视频项目 - AI驱动的视频生成
model ResearchVideoProject {
  id              String    @id @default(uuid())
  status          String    @default("draft") // draft, researching, scripting, generating_tts, generating_images, ready_for_edit, composing, completed, failed

  // 基本信息
  topic           String    @db.Text              // 用户输入的主题
  title           String?                         // 生成的标题

  // 研究相关
  researchDimensions String? @db.LongText         // JSON: AI生成的研究维度 [{id, dimension, query, status, result}]
  researchResults    String? @db.LongText         // 合并后的研究结果

  // 脚本
  fullScript      String?   @db.LongText          // 完整脚本文本

  // 配置
  speaker         String    @default("zh_female_vivi") // TTS发音人
  speed           Float     @default(1.0)         // TTS语速
  imageModel      String    @default("nano-banana") // 图片生成模型
  aspectRatio     String    @default("16:9")      // 视频画面比例

  // 输出
  videoUrl        String?   @db.Text              // 最终视频URL
  coverUrl        String?   @db.Text              // 封面图URL
  duration        Float?                          // 视频总时长（秒）

  // 关联
  userId          String?
  user            User?     @relation(fields: [userId], references: [id])
  segments        ResearchVideoSegment[]

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  completedAt     DateTime?
  deletedAt       DateTime?

  @@index([userId])
  @@index([status])
  @@index([deletedAt])
}

// 研究视频分段 - 每个分段包含音频和图片
model ResearchVideoSegment {
  id              String    @id @default(uuid())
  projectId       String
  project         ResearchVideoProject @relation(fields: [projectId], references: [id], onDelete: Cascade)

  order           Int                             // 分段顺序 (0-based)
  text            String    @db.Text              // 该段脚本文本

  // v2: 章节信息（用于信息图生成）
  chapterTitle    String?   @db.VarChar(255)      // 章节标题
  keyPoints       String?   @db.Text              // JSON: ["要点1", "要点2", ...]
  visualStyle     String?   @db.VarChar(50)       // infographic | news | data | story | comparison

  // TTS 音频
  audioUrl        String?   @db.Text              // 音频 URL
  audioDuration   Float?                          // 音频时长（秒）
  ttsStatus       String    @default("pending")   // pending, generating, completed, failed
  ttsParams       String?   @db.Text              // JSON: {emotion, pitch, volume}

  // 配图（支持多图）
  imageUrl        String?   @db.Text              // 主图 URL（兼容旧模式）
  imagePrompt     String?   @db.Text              // 主图提示词
  imageStatus     String    @default("pending")   // pending, generating, completed, failed
  // 多图模式
  images          String?   @db.Text              // JSON: [{index, imageUrl, prompt, durationRatio}]

  // 运镜参数（预留）
  cameraMove      String?   @db.Text              // JSON: {type, duration, params}

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@unique([projectId, order])
  @@index([projectId])
}

// ============================================================================
// 故事视频智能体 - AI驱动的儿童读物/古诗解说视频生成
// ============================================================================

// 故事视频项目
model StoryVideoProject {
  id              String    @id @default(uuid())
  status          String    @default("draft") // draft, planning, generating_frames, generating_videos, evaluating, composing, completed, failed

  // 基本信息
  story           String    @db.LongText          // 用户输入的故事/主题
  title           String?                         // AI生成的标题
  contentType     String    @default("children_book") // children_book, poetry, science, fairy_tale

  // 配置
  artStyle        String    @default("watercolor children's book style") // 画风描述
  aspectRatio     String    @default("16:9")      // 16:9 或 9:16
  qualityMode     String    @default("standard")  // economy, standard, high_quality
  voiceId         String?                         // TTS发音人ID（可选）
  bgmStyle        String?                         // 背景音乐风格（可选）

  // 分镜规划
  storyboard      String?   @db.LongText          // JSON: 完整分镜脚本
  characterRefs   String?   @db.LongText          // JSON: 角色参考特征

  // 输出
  videoUrl        String?   @db.Text              // 最终视频URL
  coverUrl        String?   @db.Text              // 封面图URL
  duration        Float?                          // 视频总时长（秒）
  totalCost       Decimal?  @db.Decimal(10, 4)    // 总消费金额

  // 生成日志
  generationLog   String?   @db.LongText          // JSON: 生成过程日志

  // 关联
  userId          String?
  scenes          StoryVideoScene[]

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  completedAt     DateTime?
  deletedAt       DateTime?

  @@index([userId])
  @@index([status])
  @@index([deletedAt])
}

// 故事视频场景
model StoryVideoScene {
  id              String    @id @default(uuid())
  projectId       String
  project         StoryVideoProject @relation(fields: [projectId], references: [id], onDelete: Cascade)

  order           Int                             // 场景顺序 (0-based)
  status          String    @default("pending")   // pending, generating_frame, generating_video, evaluating, approved, failed

  // 分镜信息
  description     String    @db.Text              // 场景描述
  expectedAction  String?   @db.Text              // 预期动作
  characters      String?   @db.Text              // JSON: 出场角色
  narration       String?   @db.Text              // 旁白文字
  transitionHint  String?   @db.Text              // 过渡提示

  // 首帧图片
  firstFrameUrl   String?   @db.Text              // 首帧图片URL
  firstFramePrompt String?  @db.Text              // 首帧生成提示词
  frameModel      String    @default("nano-banana-pro") // 图片生成模型

  // 视频片段
  videoSegments   String?   @db.LongText          // JSON: [{id, order, videoUrl, duration, inputFrame, prompt, model, status, evaluation}]
  totalDuration   Float?                          // 该场景总时长

  // AI评估
  qualityScore    Float?                          // 质量评分 (0-10)
  evaluationNote  String?   @db.Text              // 评估说明
  retryCount      Int       @default(0)           // 重试次数
  maxRetries      Int       @default(3)           // 最大重试次数

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@unique([projectId, order])
  @@index([projectId])
}

// Sora2 视频生成任务（用于异步轮询）
model Sora2Task {
  id              String    @id @default(uuid())
  status          String    @default("pending")   // pending, processing, completed, failed

  // 任务信息
  externalTaskId  String?   @db.VarChar(255)      // Sora2 API返回的任务ID
  model           String                          // sora2-portrait, sora2-portrait-15s, sora2-landscape, sora2-landscape-15s
  prompt          String    @db.Text              // 视频生成提示词
  inputImageUrl   String    @db.Text              // 输入图片URL

  // 结果
  videoUrl        String?   @db.Text              // 生成的视频URL
  lastFrameUrl    String?   @db.Text              // 提取的尾帧URL
  duration        Float?                          // 视频时长（秒）
  progress        Int       @default(0)           // 进度 0-100

  // 错误信息
  error           String?   @db.Text

  // 关联
  sceneId         String?                         // 关联的场景ID
  userId          String?

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  completedAt     DateTime?

  @@index([status])
  @@index([sceneId])
  @@index([externalTaskId])
}
