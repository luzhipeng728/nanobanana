// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  createdAt DateTime @default(now())
  canvases  Canvas[]
}

model Canvas {
  id        String   @id @default(uuid())
  name      String
  data      String   // Storing JSON string of nodes and edges
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}

model ImageTask {
  id               String   @id @default(uuid())
  status           String   // pending, processing, completed, failed
  prompt           String
  model            String
  config           String?  // JSON string of ImageGenerationConfig
  referenceImages  String?  // JSON array of reference image URLs
  imageUrl         String?  // Result image URL (when completed)
  error            String?  // Error message (when failed)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  completedAt      DateTime?
}

model MusicTask {
  id            String   @id @default(uuid())
  status        String   // pending, processing, completed, failed
  prompt        String
  lyrics        String?
  numberOfSongs Int      @default(2)
  externalTaskId String? // Mureka task ID for polling
  musicUrls     String?  // JSON array of generated music URLs [{url, flacUrl, duration}]
  error         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  completedAt   DateTime?
}

model VideoTask {
  id          String   @id @default(uuid())
  status      String   // pending, processing, completed, failed
  prompt      String
  orientation String   @default("portrait") // portrait or landscape
  inputImage  String?  // Optional image URL for image-to-video
  videoUrl    String?
  progress    Int      @default(0) // 0-100
  error       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  completedAt DateTime?
}

model StickerTask {
  id              String   @id @default(uuid())
  status          String   // pending, processing, completed, failed
  animationType   String   // 动画描述
  referenceImage  String   // 参考图片 URL
  model           String   // 使用的模型
  config          String?  // JSON 配置
  customPrompt    String?  // 自定义提示词 / 帧提示词 JSON
  totalFrames     Int      @default(10)
  completedFrames Int      @default(0)
  frames          String?  // JSON 数组，存储已生成的帧图片 URLs
  frameStatuses   String?  // JSON 数组，每帧的状态
  error           String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  completedAt     DateTime?
}

// API Key 状态管理（全局单例）
model ApiKeyState {
  id              String   @id @default("gemini") // 固定 ID，确保单例
  currentKeyIndex Int      @default(0)            // 当前使用的 Key 索引
  failedKeys      String   @default("[]")         // JSON 数组：失败的 Key 索引列表
  failedAt        String   @default("{}")         // JSON 对象：{ keyIndex: timestamp }
  updatedAt       DateTime @updatedAt
}
